@model ANKSuperMarket.Models.Urun;



<!DOCTYPE html>
<html>
<head>
    <title>Ürün Detayı</title>
</head>
<body>
    <h2>Ürün Detayı</h2>
    <p>Ürün ID: </p>
    <p>Ürün Adı: </p>
    <p>Fiyat: </p>

    <h2>Ürün Ekle</h2>
    <form asp-controller="Home" asp-action="Add" method="post">
        <input type="hidden" asp-for="Id" />

        <div>
            <label asp-for="Name">Name</label>
            <input asp-for="Name" type="text" class="form-control" />
        </div>
        <div>
            <label asp-for="Fiyat">Fiyat</label>
            <input asp-for="Fiyat" type="text" class="form-control" />
        </div>
        <div>
            <label asp-for="Stoktami">Stoktami</label>
            <input asp-for="Stoktami" type="checkbox" />
        </div>
        <button type="submit">Ekle</button>
    </form>

</body>
</html>